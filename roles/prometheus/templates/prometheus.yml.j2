global:
  scrape_interval:     15s
  evaluation_interval: 15s
#rule_files:
  # - "first.rules"
  # - "second.rules"

scrape_configs:
  - job_name: prometheus
    metrics_path: /prometheus/metrics
    static_configs:
      - targets: ['{{ inventory_hostname }}:9090']

  - job_name: linux
    static_configs:
      - targets:
{% for vm in groups['all'] %}
        - '{{ vm }}:9100'
{% endfor %}

  - job_name: bind9
    static_configs:
      - targets:
{% for vm in groups['dns_server'] %}
        - '{{ vm }}:9119'
{% endfor %}

  - job_name: mysql
    static_configs:
      - targets:
{% for vm in groups['db_servers'] %}
        - '{{ vm }}:9104'
{% endfor %}

  - job_name: nginx
    static_configs:
      - targets:
{% for vm in groups['all'] %}
        - '{{ vm }}:9113'
{% endfor %}

  - job_name: influxdb
    static_configs:
      - targets:
{% for vm in groups['influxdb'] %}
        - '{{ vm }}:9424'
{% endfor %}
